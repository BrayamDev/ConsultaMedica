@{
    ViewData["Title"] = "Home Page";
}

<div class="header">
    <div class="header-content d-flex">
        <!-- Columna izquierda: Imagen -->
        <div class="me-4" style="width: 250px; height: 250px;">
            <img src="imagenes/profile.webp" alt="Imagen de perfil" class="rounded-circle w-100 h-100" style="object-fit: cover;">
        </div>

        <!-- Columna derecha: Nombre e información -->
        <div>
            <h4 class="text-white">Buen día,</h4>
            <h2 class="display-4 fw-bold text-white">
                <span class="brand-name">Junior Rodriguez castañeda</span>
            </h2>
            <div class="d-flex align-items-center mt-4">
                <div class="icon-box me-3">
                    <i class="ri-surgical-mask-line fs-4 text-white"></i>
                </div>
                <div>
                    <h2 class="m-0 fw-bold">9</h2>
                    <p class="m-0 text-white">Pacientes</p>
                </div>
            </div>
        </div>
    </div>
    <div class="wave">
        <svg viewBox="0 0 500 150" preserveAspectRatio="none">
            <path d="M-0.27,67.61 C149.99,150.00 589.45,66.63 500.00,49.98 L500.00,150.00 L0.00,150.00 Z"></path>
        </svg>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <!-- Primera tarjeta -->
        <div class="col-md-4 mb-3 px-2">
            <div class="card custom-card h-100">
